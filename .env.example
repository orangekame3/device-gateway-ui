# Device Gateway UI - Environment Configuration Example
# Copy this file to .env and adjust values as needed

# Port Configuration (main settings users typically need to modify)
BACKEND_PORT=8000
FRONTEND_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379

# QDash API Configuration
QDASH_API_URL=http://localhost:6004/api

# Dynamic URL Configuration (based on ports above)
BACKEND_URL=http://localhost:${BACKEND_PORT}
NEXT_PUBLIC_API_URL=http://localhost:${BACKEND_PORT}/api

# Path Configuration (for Docker containers)
DEVICE_GATEWAY_PATH=/device-gateway
CONFIG_PATH=/device-gateway/config
SCRIPTS_PATH=/device-gateway/scripts

# Database Configuration
POSTGRES_DB=device_gateway_ui
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:${POSTGRES_PORT}/device_gateway_ui

# Redis Configuration
REDIS_HOST=redis

# CORS Configuration
CORS_ORIGINS=["http://localhost:${FRONTEND_PORT}"]

# Celery Configuration
C_FORCE_ROOT=1